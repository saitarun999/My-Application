<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:backgroundTint="@android:color/white"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:backgroundTint="@android:color/white"
            android:text="X"
            android:textColor="@android:color/darker_gray" />

        <Button
            android:id="@+id/Update"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="600px"
            android:layout_marginRight="10px"
            android:layout_weight="1"
            android:backgroundTint="@android:color/holo_blue_light"
            android:text="Update" />
    </LinearLayout>

    <EditText
        android:id="@+id/eventName1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:ems="10"
        android:hint="Add Title"
        android:inputType="textPersonName"
        android:paddingLeft="25px"
        android:scrollbars="horizontal" />

    <LinearLayout
        android:id="@+id/Allday1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:background="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/allDay1"
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25px"
            android:layout_marginRight="600px"
            android:paddingLeft="10px"
            android:text="ALL DAY" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:layout_marginRight="100px" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:background="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/start"
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25px"
            android:layout_marginRight="50px"
            android:paddingLeft="10px"
            android:text="Start"
            android:textSize="16sp" />

        <Button
            android:id="@+id/startDate1"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginRight="100px"
            android:backgroundTint="@android:color/white"
            android:hint="Sunday,26 Feb"
            android:textColor="@android:color/darker_gray" />

        <Button
            android:id="@+id/startTime1"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:backgroundTint="@android:color/white"
            android:hint="4 PM"
            android:textColor="@android:color/darker_gray" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:background="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/end"
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25px"
            android:layout_marginRight="50px"
            android:paddingLeft="10px"
            android:text="End"
            android:textSize="16sp" />

        <Button
            android:id="@+id/endDate1"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginRight="100px"
            android:backgroundTint="@android:color/white"
            android:hint="Sunday, 26Feb"
            android:textColor="@android:color/darker_gray" />

        <Button
            android:id="@+id/endTime1"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:backgroundTint="@android:color/white"
            android:hint="5 PM"
            android:textColor="@android:color/darker_gray" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:background="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/remind"
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25px"
            android:layout_marginRight="50px"
            android:layout_weight="1"
            android:paddingLeft="10px"
            android:text="Remind me"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/remindMe1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <EditText
        android:id="@+id/description1"
        android:layout_width="390dp"
        android:layout_height="150dp"
        android:layout_marginLeft="25px"
        android:layout_marginTop="30px"
        android:background="@android:color/white"
        android:gravity="top|start"
        android:hint="EventDescription"
        android:inputType="text|textMultiLine"
        android:scrollbars="vertical"
        android:textSize="16sp" />

    <Button
        android:id="@+id/delete"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginLeft="400px"
        android:layout_marginTop="100px"
        android:backgroundTint="@android:color/holo_red_dark"
        android:text="Delete" />


</LinearLayout>